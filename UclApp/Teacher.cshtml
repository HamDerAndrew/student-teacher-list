@using UclLib.Object;
@using UclLib.Data;
@{
    Layout = "~/MasterLayout.cshtml";
    var teachers = GetData.GetTeachers();
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="list-group">
                @foreach (var teacher in teachers)
                {
                    //create a unique ID for each teacher in the Modal
                    var modalID = "teach" + teacher.CPR;

                    <a href="#" data-toggle="modal" data-target="#@modalID" class="list-group-item list-group-item-action active">
                        @teacher.Name
                    </a>
                    <div class="modal fade" id="@modalID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Info about @teacher.Name</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @teacher.CPR <br />
                                    @teacher.Phone <br />
                                    @teacher.Email
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
